</div>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <h1><%= @list.name  %></h1>
</div>

<br>
<div class="container">
  <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <img src="<%= movie.poster_url %>" alt="<%= movie.title %>">
      <div class="card-trip-infos">
        <div>
          <h2><%= movie.title %></h2>
          <p><%= movie.rating %></p>
          <p><%= movie.overview %></p>
        </div>
        <div>
          <% movie.bookmarks.each do |bookmark| %>
            <p><%= bookmark.comment  %></p>
             <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>






<br>
<%= link_to 'Add a new bookmark',  new_list_bookmark_path(@list)  %>
