<div class="navbar navbar-expand-sm">

</div>


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path 'cinema.jpg' %>)">
  <div class="container">
    <h1>My movie library</h1>
    <%= link_to 'Create a new list', new_list_path(@list), class: 'btn btn-success' %>
  </div>
</div>

<div class="list-navbar">
  <h2>My lists</h2>
</div>

<div class="list-cards">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <p><%= link_to list.name , list_path(list) %></p>
    </div>
  <% end %>
</div>
